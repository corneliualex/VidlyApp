@model VidlyApp.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Create","Movies"))
{
    @Html.ValidationSummary(true,"Fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name , new { @class="form-control"})
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>

    @*Added by default with DateTime.Now
        <div class="form-group">
        @Html.LabelFor(m => m.Movie.AddedDate)
        @Html.TextBoxFor(m => m.Movie.AddedDate, new { @class = "form-control" })
    </div>*@

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GendreId)
        @Html.DropDownListFor(m => m.Movie.GendreId,new SelectList(Model.Genres,"Id","Name"),"Select Genres", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GendreId)
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }