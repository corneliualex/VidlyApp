@model  VidlyApp.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Gendre : @Model.Gendre.Name</li>
    <li>Release date : @Model.ReleaseDate.ToString("dd-MM-yyy")</li>
    <li>Date Added : @Model.AddedDate.ToString("dd-MM-yyy")</li>
    <li>Number in stock : @Model.NumberInStock</li>

</ul>

