@using VidlyApp.Models
@model VidlyApp.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
<h2>@( ((Movie)ViewData["Movie"]).Name)</h2>
<h2>@( ((Movie)ViewBag.Movie).Name)</h2>
*@

@{ 
    var popular = Model.Customers.Count > 3 ? "popular" : null;
}

<h2 class="@popular">@Model.Movie.Name</h2>
@if (Model.Customers.Count == 0 )
{
    <p>No one has rented this movie</p>
}
else
{
    <ul>
        @foreach (var item in Model.Customers)
        {
            <li>@item.Name</li>

        }
    </ul>
}

